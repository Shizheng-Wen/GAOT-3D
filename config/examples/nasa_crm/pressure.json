{
    "setup": {
        "seed": 42,
        "device": "cuda:0",
        "dtype": "torch.float32",
        "trainer_name": "static3d",
        "train": true,
        "test": false,
        "ckpt": false,
        "use_variance_test": false,
        "distributed": true
    },

    "model": {
        "name": "gaot_3d",
        "use_conditional_norm": false,
        "args": {
            "latent_tokens": [64,64,32],
            "magno": {
                "use_gno": true,
                "gno_coord_dim": 3,
                "neighbor_strategy": "bidirectional",
                "projection_channels": 256,
                "in_gno_channel_mlp_hidden_layers": [64,64,64],
                "out_gno_channel_mlp_hidden_layers": [64,64],
                "lifting_channels": 32,
                "gno_radius": 0.022,
                "gno_use_torch_cluster": true,
                "attention_type": "cosine",
                "use_geoembed": true,
                "embedding_method": "statistical",
                "encoder_feature_attr": "c",
                "precompute_edges": true,
                "sampling_strategy": "ratio",
                "sample_ratio": 0.7
            },
            "transformer": {
                "patch_size": 2,
                "hidden_size": 256,
                "use_attn_norm": true,
                "use_ffn_norm": true,
                "norm_eps": 1e-06,
                "num_layers": 5,
                "positional_embedding": "rope",
                "use_long_range_skip": true,
                "attn_config": {
                    "hidden_size": 256,
                    "num_heads": 8,
                    "num_kv_heads": 8,
                    "use_conditional_norm": false,
                    "cond_norm_hidden_size": 4,
                    "atten_dropout": 0.2
                },
                "ffn_config": {
                    "hidden_size": 1024,
                    "use_conditional_norm": false,
                    "cond_norm_hidden_size": 4
                }
            }
        }
    },
    "dataset": {
        "name": "nasa_crm_pressure",
        "metaname": "incompressible_fluids/nasa_crm_pressure",
        "base_path": "/cluster/work/math/camlab-data/graphnpde/nasa_crm/",
        "active_variables": [0],
        "force_recompute_stats": false,
        "train_size": 100,
        "val_size": 5,
        "test_size": 44,
        "batch_size": 1,
        "num_workers": 4,
        "shuffle": true,
        "metric_suite": "general",
        "update_pt_files_with_edges": false
    },
    "optimizer": {
        "name": "adamw",
        "args": {
            "lr": 1e-4,
            "weight_decay": 1e-05,
            "epoch": 500,
            "loss_scale": 1.0,
            "eval_every_eps": 2,
            "scheduler": "mix",
            "max_lr": 1e-4,
            "min_lr": 1e-5,
            "final_lr": 1e-6
        }
    },
    "path": {
        "ckpt_path": ".ckpt/nasa_crm/pressure.pt",
        "loss_path": ".loss/nasa_crm/pressure_ctu.png",
        "result_path": ".results/nasa_crm/pressure.png",
        "database_path": ".database/nasa_crm/pressure.csv"
    }
}