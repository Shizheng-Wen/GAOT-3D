{
    "setup": {
        "seed": 42,
        "device": "cuda:0",
        "dtype": "torch.float32",
        "trainer_name": "static3d",
        "train": true,
        "test": false,
        "ckpt": false,
        "use_variance_test": false,
        "distributed": true
    },

    "model": {
        "name": "gaot_3d",
        "use_conditional_norm": false,
        "args": {
            "latent_tokens": [32,32,32],
            "magno": {
                "gno_coord_dim": 3,
                "projection_channels": 256,
                "in_gno_channel_mlp_hidden_layers": [64,64,64],
                "out_gno_channel_mlp_hidden_layers": [64,64],
                "lifting_channels": 32,
                "gno_radius": 0.033,
                "gno_use_torch_cluster": true,
                "attention_type": "cosine",
                "use_geoembed": true,
                "embedding_method": "statistical"
            },
            "transformer": {
                "patch_size": 8,
                "hidden_size": 256,
                "use_attn_norm": true,
                "use_ffn_norm": true,
                "norm_eps": 1e-06,
                "num_layers": 5,
                "positional_embedding": "rope",
                "use_long_range_skip": true,
                "attn_config": {
                    "hidden_size": 256,
                    "num_heads": 8,
                    "num_kv_heads": 8,
                    "use_conditional_norm": false,
                    "cond_norm_hidden_size": 4,
                    "atten_dropout": 0.2
                },
                "ffn_config": {
                    "hidden_size": 1024,
                    "use_conditional_norm": false,
                    "cond_norm_hidden_size": 4
                }
            }
        }
    },
    "dataset": {
        "name": "drivaernet_fullpressure",
        "metaname": "gnpde-unstructured/drivaernet",
        "base_path": "/cluster/work/math/camlab-data/graphnpde/drivaernet/",
        "train_size": 5817,
        "val_size": 1148,
        "test_size": 1154,
        "batch_size": 10,
        "num_workers": 4,
        "shuffle": true,
        "metric_suite": "general"
    },
    "optimizer": {
        "name": "adamw",
        "args": {
            "lr": 1e-3,
            "weight_decay": 1e-05,
            "epoch": 500,
            "loss_scale": 1.0,
            "eval_every_eps": 2,
            "scheduler": "mix",
            "max_lr": 1e-3,
            "min_lr": 1e-4,
            "final_lr": 1e-5
        }
    },
    "path": {
        "ckpt_path": ".ckpt/gaot/drivaernet/drivaernet.pt",
        "loss_path": ".loss/gaot/drivaernet/drivaernet.png",
        "result_path": ".results/gaot/drivaernet/drivaernet.png",
        "database_path": ".database/gaot/drivaernet/drivaernet.csv"
    }
}